# NodesCrypt Environment Configuration
# Copy this to .env and fill in your values

# ============================================
# WALLET (REQUIRED FOR DEPLOYMENT)
# ============================================
# Your MetaMask private key (without 0x prefix)
# Get from: MetaMask > Account Details > Export Private Key
PRIVATE_KEY=your_private_key_here

# ============================================
# SHARDEUM SPHINX TESTNET
# ============================================
SHARDEUM_RPC=https://sphinx.shardeum.org
SHARDEUM_CHAIN_ID=8082
# Get SHM tokens: Discord https://discord.gg/shardeum â†’ /faucet YOUR_ADDRESS

# ============================================
# INCO TESTNET (Gentry)
# ============================================
INCO_RPC=https://testnet.inco.org
INCO_CHAIN_ID=9090
# Get INCO tokens: https://faucet.inco.org

# ============================================
# DEPLOYED CONTRACT ADDRESSES (filled after deployment)
# ============================================
SHARDEUM_CONTRACT_ADDRESS=
INCO_CONTRACT_ADDRESS=

# ============================================
# ETHEREUM DATA SOURCE (for streaming)
# ============================================
ETH_RPC_URL=https://eth.llamarpc.com

# ============================================
# DATABASE
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=cp
POSTGRES_PASSWORD=cp
POSTGRES_DB=checkpoint

# ============================================
# SERVICES
# ============================================
ML_SERVICE_URL=http://127.0.0.1:8003
METRICS_PORT=9100
DASHBOARD_PORT=3001
